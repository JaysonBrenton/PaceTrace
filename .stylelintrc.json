{
  "extends": ["stylelint-config-standard"],
  "plugins": ["stylelint-declaration-strict-value"],
  "rules": {
    "color-no-hex": true,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "layer"]
      }
    ],
    "scale-unlimited/declaration-strict-value": [
      [
        "/color$/",
        "background",
        "background-color",
        "border",
        "border-color",
        "outline-color",
        "fill",
        "stroke"
      ],
      {
        "ignoreVariables": true,
        "ignoreFunctions": true
      }
    ]
  }
}
